@model FrontEnd.Models.UsuarioViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <title>Inicio de Sesión | RedBox - Distribuidora</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesdesign" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body class="auth-body-bg">
    <div>
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-lg-4">
                    <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                        <div class="w-100">
                            <div class="row justify-content-center">
                                <div class="col-lg-9">
                                    <div>
                                        <div class="text-center">
                                            <div>
                                                <a href="#" class="">
                                                    <img src="assets/images/redbox.png" alt="" height="100" class="auth-logo logo-dark mx-auto">
                                                    <img src="assets/images/redbox.png" alt="" height="100" class="auth-logo logo-light mx-auto">
                                                </a>
                                            </div>

                                            <h4 class="font-size-18 mt-4">¡Bienvenido de Nuevo!</h4>
                                            <p class="text-muted">Inicie Sesión para acceder a RedBox.</p>
                                        </div>

                                        <div class="p-2 mt-5">

                                            @using (Html.BeginForm("Acceder", "Usuario", FormMethod.Post))
                                            {
                                                <div class="mb-3 auth-form-group-custom mb-4">

                                                    <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                    <label asp-for="NombreUsuario" class="control-label"></label>
                                                    @*<input asp-for="NombreUsuario" class="form-control" />*@
                                                    @Html.TextBoxFor(m=>m.NombreUsuario,new{@class="form-control",placeholder="Usuario"})
                                                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>


                                                </div>

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                    <label asp-for="ContraseniaUsuario" class="control-label"></label>
                                                    @Html.TextBoxFor(m=>m.ContraseniaUsuario,new{@class="form-control", placeholder="Contraseña", type="password"})

                                                    @*<input asp-for="ContraseniaUsuario" class="form-control" type="password" />*@
                                                    <span asp-validation-for="ContraseniaUsuario" class="text-danger"></span>

                                                </div>

                                                @*<input type="submit" value="Acceder" class="btn btn-danger w-md waves-effect waves-light" />*@
                                                <button type="submit" class="btn btn-danger w-md waves-effect waves-light">Acceder</button>
                                            }

                                        </div>

                                        <div class="mt-5 text-center">
                                            <p>¿No tiene cuenta? <a class="fw-medium text-danger"> Contacte a administración para tener acceso.</a> </p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="authentication-bg">
                        <div class="bg-overlay"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- JAVASCRIPT -->
    <script src="assets/libs/jquery/jquery.min.js"></script>
    <script src="assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="assets/libs/simplebar/simplebar.min.js"></script>
    <script src="assets/libs/node-waves/waves.min.js"></script>

    <script src="assets/js/app.js"></script>

</body>
</html>

