@model IEnumerable<FrontEnd.Models.UsuarioViewModel>

@{
    ViewData["Title"] = "Todos los Usuarios";
}

<h1>Usuarios de RedBox</h1>

<p>
    <a asp-action="BusquedaHacienda" class="btn btn-danger waves-effect waves-light">Registrar Nuevo Usuario <i class="ri-user-add-line align-middle ms-2"></i></a>
</p>



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="alternative-page-datatable" class="table dt-responsive nowrap w-100">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cedula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreUsuario)
                            </th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cedula)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                                </td>


                                <td>
                                    @Html.ActionLink("Edit", "Edit", new {  id=item.IdUsuario  }) |
                                    @Html.ActionLink("Details", "Details", new {  id=item.IdUsuario  }) |
                                    @Html.ActionLink("Delete", "Delete", new {  id=item.IdUsuario })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>