@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Detalle del Producto";
}

@*<h1>Detalle del Producto</h1>*@



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-5">
                        <div class="product-detail">
                            <div class="row">
                                <div class="col-3">
                                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                        <a class="nav-link active" id="product-1-tab" data-bs-toggle="pill" href="#product-1" role="tab">
                                            @{
                                                    string imageBase64a = Convert.ToBase64String(Model.RutaImagen);
                                                    string imageSrc1 = string.Format("data:ContentType = image/jpg;base64,{0}", imageBase64a);
                                                    <img src="@imageSrc1" class="img-fluid mx-auto d-block tab-img rounded"/>
                                                }
                                            @*<img src="~/assets/images/product/gorraadidas.jpg" alt="img-1" class="img-fluid mx-auto d-block tab-img rounded">*@
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-8 col-9">
                                    <div class="tab-content" id="v-pills-tabContent">
                                        <div class="tab-pane fade show active" id="product-1" role="tabpanel">
                                            <div class="product-img">
                                                
                                                @*<img src="~/assets/images/product/gorraadidas.jpg" alt="img-1" class="img-fluid mx-auto d-block" data-zoom="~/assets/images/product/img-1.png">*@
                                                
                                                @{
                                                    string imageBase64 = Convert.ToBase64String(Model.RutaImagen);
                                                    string imageSrc = string.Format("data:ContentType = image/jpg;base64,{0}", imageBase64);
                                                    <img src="@imageSrc" class="img-fluid mx-auto d-block" />
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row text-center mt-2">
                                        <div class="col-sm-6">
                                            <div class="d-grid">
                                                <a href="@Url.Action("Index","Producto")" class="btn btn-primary waves-effect waves-light mt-2">
                                                    <i class="mdi mdi-shopping-search me-2"></i> Ver más Productos
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="d-grid">
                                                <a href="@Url.Action("Index","Pedido")" class="btn btn-light waves-effect  mt-2 waves-light">
                                                    <i class="mdi mdi-shopping me-2"></i>Generar mi Pedido
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end product img -->
                    </div>
                    <div class="col-xl-7">
                        <div class="mt-4 mt-xl-3">
                            <a href="#" class="text-primary">@Html.DisplayNameFor(model => model.NombreProducto)</a>
                            <h5 class="mt-1 mb-3">@Html.DisplayFor(model => model.NombreProducto)</h5>

                            <div class="d-inline-flex">
                                <div class="text-muted me-3">
                                    <span class="mdi mdi-star text-warning"></span>
                                    <span class="mdi mdi-star text-warning"></span>
                                    <span class="mdi mdi-star text-warning"></span>
                                    <span class="mdi mdi-star text-warning"></span>
                                    <span class="mdi mdi-star"></span>
                                </div>

                            </div>
                            <br />
                            @Html.DisplayNameFor(model => model.PrecioProducto):
                            <h5 class="mt-2">₡ @Html.DisplayFor(model => model.PrecioProducto)</h5>
                            <p class="mt-3 text-danger">El precio del producto es unitario.</p>
                            <hr class="my-4">

                            <div class="row">
                                <div class="col-md-6">
                                    <div>


                                        <h5 class="font-size-14">Específicaciones :</h5>
                                        <ul class="list-unstyled product-desc-list">
                                            <p class="mt-3 text-danger">@Html.DisplayNameFor(model => model.CantidadDisponible):</p>
                                            <li><i class="mdi mdi-circle-medium me-1 align-middle"></i> @Html.DisplayFor(model => model.CantidadDisponible)</li>
                                            <br />
                                            <p class="mt-3 text-danger">@Html.DisplayNameFor(model => model.TallaProducto):</p>
                                            <li><i class="mdi mdi-circle-medium me-1 align-middle"></i> @Html.DisplayFor(model => model.TallaProducto)</li>

                                        </ul>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <h5 class="font-size-14">Servicios :</h5>
                                    <ul class="list-unstyled product-desc-list">
                                        <li><i class="mdi mdi-sync text-primary me-1 align-middle font-size-16"></i> 22 Días de Garantía</li>
                                        <li><i class="mdi mdi-currency-usd-circle text-primary me-1 align-middle font-size-16"></i> Pago en el establecimiento</li>
                                    </ul>
                                </div>
                            </div>

                            @*<div class="row">
                                <div class="col-md-6">
                                    <div class="product-color mt-3">
                                        <h5 class="font-size-14">Otros colores:</h5>
                                        <a href="#" class="active">
                                            <div class="product-color-item">
                                                <img src="~/assets/images/product/gorraadidas.jpg" alt="img-1" class="avatar-md">
                                            </div>
                                            <p>Blue</p>
                                        </a>
                                        <a href="#">
                                            <div class="product-color-item">
                                                <img src="~/assets/images/product/gorraadidas.jpg" alt="img-5" class="avatar-md">
                                            </div>
                                            <p>Cyan</p>
                                        </a>
                                        <a href="#">
                                            <div class="product-color-item">
                                                <img src="~/assets/images/product/gorraadidas.jpg" alt="img-3" class="avatar-md">
                                            </div>
                                            <p>Green</p>
                                        </a>
                                    </div>
                                </div>*@

                                @*<div class="col-md-6">
                                    <div class="product-color mt-3">
                                    <h5 class="font-size-14">Size :</h5>
                                    <a href="#" class="active">
                                    <div class="product-color-item">
                                    <div class="avatar-xs">
                                    <span class="avatar-title bg-transparent text-body">S</span>
                                    </div>
                                    </div>

                                    </a>
                                    <a href="#">
                                    <div class="product-color-item">
                                    <div class="avatar-xs">
                                    <span class="avatar-title bg-transparent text-body">M</span>
                                    </div>
                                    </div>
                                    </a>
                                    <a href="#">
                                    <div class="product-color-item">
                                    <div class="avatar-xs">
                                    <span class="avatar-title bg-transparent text-body">L</span>
                                    </div>
                                    </div>
                                    </a>
                                    <a href="#">
                                    <div class="product-color-item">
                                    <div class="avatar-xs">
                                    <span class="avatar-title bg-transparent text-body">XL</span>
                                    </div>
                                    </div>
                                    </a>
                                    </div>
                                    </div>*@
                            @*</div>*@

                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="mt-4">
                    <h5 class="font-size-14 mb-3">Más detalles de @Html.DisplayFor(model => model.NombreProducto): </h5>
                    <div class="product-desc">
                        <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="specifi-tab" data-bs-toggle="tab" href="#specifi" role="tab">Especificaciones Extra</a>
                            </li>
                        </ul>
                        <div class="tab-content border border-top-0 p-4">
                            <div class="tab-pane fade show active" id="specifi" role="tabpanel">
                                <div class="table-responsive">
                                    <table class="table table-nowrap mb-0">
                                        <tbody>
                                            <tr>
                                                <th scope="row" style="width: 400px;">@Html.DisplayNameFor(model => model.IdCategoria)</th>
                                                <td>@Html.DisplayFor(model => model.Categorium.NombreCategoria)</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(model => model.IdProveedor)</th>
                                                <td>@Html.DisplayFor(model => model.Proveedor.NombreProveedor)</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                                                <td>@Html.DisplayFor(model => model.FechaRegistro)</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <!-- end card -->
    </div>
</div>





















