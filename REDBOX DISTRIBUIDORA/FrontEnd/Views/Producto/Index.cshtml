@model IEnumerable<FrontEnd.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Todos los Productos";
}

@*<h1>Index</h1>*@

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-xl-3 col-lg-4">
        <div class="card">
            <div class="card-header bg-transparent border-bottom">
                <h5 class="mb-0">Filtros</h5>
            </div>

            <div class="card-body">
                <h5 class="font-size-14 mb-3">Categorías</h5>

                <div class="accordion ecommerce" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <i class="mdi mdi-shoe-sneaker font-size-16 align-middle me-2"></i> Zapatos
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul class="list-unstyled categories-list mb-0">
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Tennis Deportivas</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Tennis</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Zapatos Formales</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Tacones</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Burros</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <i class="mdi mdi-hanger font-size-16 align-middle me-2"></i> Fashion
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul class="list-unstyled categories-list mb-0">
                                    <li class="active"><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Ropa</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Sueters</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Sudaderas</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Camisas Deportivas</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Camisas Formales</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                <i class="mdi mdi-watch font-size-16 align-middle me-2"></i> Joyería & Relojería
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <ul class="list-unstyled categories-list mb-0">
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Relojes</a></li>
                                    <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Anillos</a></li>
                                   @* <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Toys</a></li>*@
                                   @* <li><a href="#"><i class="mdi mdi-circle-medium me-1"></i> Baby care</a></li>*@
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

            

            
        </div>
    </div>
    <div class="col-lg-9">
        <div class="card">
            <div class="card-body">
                <div>
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                <h5>Ropa & Accesorios</h5>
                                <p>A continuación se muestran todos los productos...</p>
                                @*<ol class="breadcrumb p-0 bg-transparent mb-2">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Fashion</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Clothing</a></li>
                                <li class="breadcrumb-item active">T-shirts</li>
                                </ol>*@
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-inline float-md-end">
                                <div class="search-box ms-2">
                                    <div class="position-relative">
                                        <input type="text" class="form-control rounded" placeholder="Buscar...">
                                        <i class="mdi mdi-magnify search-icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <br />
                    <div class="row g-0">
                        @foreach (var item in Model)
                        {
                            <div class="col-xl-4 col-sm-6">
                                <div class="product-box">
                                    <div class="product-img">
                                        <div class="product-ribbon badge bg-warning">
                                            Nuevo
                                        </div>
                                        <div class="product-like">
                                            <a href="#">
                                                <i class="mdi mdi-heart-outline"></i>
                                            </a>
                                        </div>
                                        @{
                                                    string imageBase64 = Convert.ToBase64String(item.RutaImagen);
                                                    string imageSrc = string.Format("data:ContentType = image/jpg;base64,{0}", imageBase64);
                                                    <img src="@imageSrc"  alt="img-1" class="img-fluid mx-auto d-block"/>
                                                }
                                        }
                                    </div>
                                    <div class="text-center">
                                        @*<p class="font-size-12 mb-1">ID: @Html.DisplayFor(modelItem => item.IdProducto)</p>*@
                                        <h5 class="font-size-15"><a href="#" class="text-dark">@Html.DisplayFor(modelItem => item.NombreProducto)</a></h5>
                                        <h5 class="mt-3 mb-0">₡ @Html.DisplayFor(modelItem => item.PrecioProducto) (unitario)</h5>
                                        <br/>                                       
                                        @Html.ActionLink("Conocer Más", "Details", new { id=item.IdProducto },new {@class="btn btn-danger w-lg waves-effect waves-light",  @title="Conocer Más"})
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>




        </div>



    </div>
</div>

















