@model FrontEnd.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Editar";
}


<h4>Actualización de Categoria</h4>
<hr />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Editar un Pedido</h4>
                <p class="card-title-desc">
                   Modifique el estado del pedido.
                </p>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(Model=>Model.NombreCategoria)
                    <div class="row mb-3">
                        <label asp-for="NombreCategoria" class="col-sm-2 col-form-label"></label>
                        <input asp-for="NombreCategoria" class="form-control" />
                        <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar Cambios" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Volver a Categorias</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





