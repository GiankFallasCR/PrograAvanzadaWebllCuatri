@model FrontEnd.Models.PedidoViewModel

@{
    ViewData["Title"] = "Detalles del Pedido";
}
<div class="email-leftbar card">
    <button type="button" class="btn btn-light btn-block waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#composemodal">         
        <a asp-action="Index2">Ir a mis pedidos</a>
    </button>
</div>
<div class="email-rightbar mb-3">
    <div class="card">
        <div class="btn-toolbar p-3" role="toolbar">
            <div class="btn-group me-2 mb-2 mb-sm-0">
                @Html.ActionLink("", "Edit", new { id = Model.IdPedido }, new {@class="btn btn-danger w-xs ri-pencil-fill",  @title="Editar"})

            </div>
        </div>
        <div class="card-body">
            <div class="d-flex mb-4">
                <div class="flex-1">
                    <h5 class="font-size-14 my-1">@Html.DisplayFor(model => model.Usuario.Nombre)</h5>
                    <small class="text-muted">Nombre del Cliente</small>
                </div>
            </div>
            <h4>Pedido</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdPedido)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdPedido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroPedido)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroPedido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaPedido)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaPedido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdProducto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Producto.NombreProducto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdEstado)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado.DescripcionEstado)
                </dd>
            </dl>
        </div>
    </div>
</div>
