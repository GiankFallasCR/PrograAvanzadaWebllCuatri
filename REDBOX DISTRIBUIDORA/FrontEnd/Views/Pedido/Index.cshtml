@model IEnumerable<FrontEnd.Models.PedidoViewModel>

@{
    ViewData["Title"] = "Todos los Pedidos";
}

<h1>Listado de Pedidos</h1>

<p>
    <a asp-action="Create" class="btn btn-danger waves-effect waves-light">Generar Nuevo Pedido <i class="ri-shopping-basket-line align-middle ms-2"></i></a>
</p>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <table id="alternative-page-datatable" class="table dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdPedido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroPedido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaPedido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdProducto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdEstado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdUsuario)
                            </th>
                            <th>
                                Acción
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdPedido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroPedido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaPedido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdProducto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdEstado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdUsuario)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id=item.IdPedido  }) |
                                    @Html.ActionLink("Detalles", "Details", new { id=item.IdPedido }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id=item.IdPedido })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

